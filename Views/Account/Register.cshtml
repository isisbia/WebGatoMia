@model WebGatoMia.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registro";
}

<main class="register-main">
    <div class="form-container">
        <h2>Cadastre-se</h2>

        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name">Nome:</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Nome Completo" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">E-mail:</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="seuemail@exemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Senha</label>
                <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirmar Senha:</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirme sua senha" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Telefone (Opcional):</label>
                <input asp-for="Phone" type="tel" class="form-control" placeholder="(XX) XXXXX-XXXX" />
                <small class="phone-hint">
                    Ex: (11) 98765-4321 ou 11987654321
                </small>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Criar Conta</button>
        </form>

        <p class="login-link">Já tem uma conta? <a asp-controller="Home" asp-action="Login">Faça Login</a></p>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/script.js"></script>
}