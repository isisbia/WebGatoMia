@model WebGatoMia.Models.User

@{
    ViewData["Title"] = "Deletar Usuário";
}

<div class="form-container">
    <h2>Tem certeza que deseja excluir este usuário?</h2>

    <div class="user-details">
        <p><strong>Nome:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefone:</strong> @Model.Phone</p>
        <p><strong>Tipo:</strong> @Model.UserType?.Name</p>
        <p><strong>Ativo:</strong> @(Model.IsActive ? "Sim" : "Não")</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
